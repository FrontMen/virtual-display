<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <title>Configure your Toon</title>
</head>
<body>
<h1>Configure your TOON</h1>
{{#if toon}}
    <ul>
        {{#each toon.devices}}
            <li>{{this.name}}</li>
        {{/each}}
    </ul>
{{else}}
    <form id="createToon" name="createToon" action="/create" method="post">
        <fieldset>
            <legend>Devices</legend>
            <label>
                <input id="fridge" type="checkbox" value="fridge" /> Refrigurator
            </label>
        </fieldset>
        <button type="submit">Create a virtual TOON</button>
    </form>
{{/if}}
<script src="main.js"></script>
</body>
</html>
